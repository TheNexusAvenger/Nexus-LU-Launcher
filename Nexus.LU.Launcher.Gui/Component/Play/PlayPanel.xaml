<DockPanel xmlns="https://github.com/avaloniaui"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:Nexus.LU.Launcher.Gui.Component.Base="clr-namespace:Nexus.LU.Launcher.Gui.Component.Base"
           x:Class="Nexus.LU.Launcher.Gui.Component.Play.PlayPanel"
           Height="42" HorizontalAlignment="Right" Margin="0,7,0,0">
    <StackPanel HorizontalAlignment="Left">
        <DockPanel Height="20" Name="LoadingDotsContainer" Margin="0,12,0,0"/>
        <TextBlock TextAlignment="Left" Foreground="#505050" FontFamily="Arial" Name="LoadingText"
                   FontSize="11" Margin="0,2,0,0"></TextBlock>
    </StackPanel>
    <Nexus.LU.Launcher.Gui.Component.Base:RoundedButton Name="PlayButton"
                                                        Width="136" Height="42" Margin="10,0,15,0">
        <TextBlock TextAlignment="Center" Foreground="#FFFFFF" FontFamily="Arial"
                   FontWeight="Bold" FontSize="32" Name="PlayText">Client_PlayButtonText</TextBlock>
    </Nexus.LU.Launcher.Gui.Component.Base:RoundedButton>
</DockPanel>