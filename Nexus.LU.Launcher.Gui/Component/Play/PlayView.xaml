<StackPanel xmlns="https://github.com/avaloniaui"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:Nexus.LU.Launcher.Gui.Component.Play="clr-namespace:Nexus.LU.Launcher.Gui.Component.Play"
            x:Class="Nexus.LU.Launcher.Gui.Component.Play.PlayView">
    <Canvas>
        <ScrollViewer Name="ClientOutputScroll" Width="664" Height="300" Canvas.Top="4" Canvas.Left="4" IsVisible="False">
            <TextBox IsReadOnly="True" Name="ClientOutput"/>
        </ScrollViewer>
        <StackPanel Name="PlayContainer">
            <Border Background="#0C0D16" Width="664" Height="256" Margin="2,0" CornerRadius="7">
                <ScrollViewer VerticalAlignment="Top" HorizontalAlignment="Left">
                    <StackPanel Name="ServerList" Margin="0,0,0,5"/>
                </ScrollViewer>
            </Border>
            <Nexus.LU.Launcher.Gui.Component.Play:PlayPanel Name="PlayPanel"/>
        </StackPanel>
    </Canvas>
</StackPanel>